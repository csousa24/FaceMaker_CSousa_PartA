

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <SurfaceView
        android:id="@+id/faceSurfaceView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="16dp" />

    <!-- Red SeekBar -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Red"
        android:textSize="18sp"/>

    <SeekBar
        android:id="@+id/redSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- Green SeekBar -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Green"
        android:textSize="18sp"/>

    <SeekBar
        android:id="@+id/greenSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- Blue SeekBar -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blue"
        android:textSize="18sp"/>

    <SeekBar
        android:id="@+id/blueSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- Hair Style Spinner -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hair Style"
        android:textSize="18sp"/>

    <Spinner
        android:id="@+id/hairStyleSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Feature"
        android:textSize="18sp"/>

    <RadioGroup
        android:id="@+id/featureRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/hairRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hair"/>

        <RadioButton
            android:id="@+id/eyesRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eyes"/>

        <RadioButton
            android:id="@+id/skinRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skin"/>
    </RadioGroup>

    <!-- Random Face Button -->
    <Button
        android:id="@+id/randomFaceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Random Face"/>

</LinearLayout>